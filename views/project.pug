extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- Project title
        h1 #{title}

        //- Project description
        p.lead.text-light
          | #{description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //- Iterate thru the technologies and create a list
        ul
          each technology in technologies
            li= technology

        //- link each project from the data 
        a.button.expanded(href=`${live_link}` target= '_blank') Live Demo
        a.button.expanded(href=`${github_repo}` target= '_blank') GitHub Repo
    
    //- Get images for the project from the data
    img.image(src=`${projectImages[1]}`)
    img.image(src=`${projectImages[2]}`)
    img.image(src=`${projectImages[3]}`)